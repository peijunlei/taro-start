{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      // TS5090 leading './'
      "@/*": ["src/*"],
      "api": ["src/webapi"],
      "api/*": ["src/webapi/*"],
      "wmkit": ["src/wmkit/common"],
      "config": ["src/wmkit/config"],
      "typings": ["src/typings/index.d.ts"],
    }
  },
  "include": ["./src", "./types", "./config"],
  "compileOnSave": false
}
